<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <h1><%= @figure.name %></h1>

  <h4>Update Name:</h4>
  <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <h4>Update Title(s)</h4>

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
    <br></br>
  <% end %>

  <h4>Or Add a New Title</h4>
  <p>Title: <input type="text" name="title[name]" id="new_title"></p><br>
  
  <input type="submit" value="Update Figure">
</form>
